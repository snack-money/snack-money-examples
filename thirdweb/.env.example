# Thirdweb Client ID (get from https://thirdweb.com/dashboard)
THIRDWEB_CLIENT_ID=your_client_id

# Thirdweb secret key (get from https://thirdweb.com/dashboard)
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key

# Your thirdweb server wallet address
# Leave empty on first run to create a new wallet, then paste the generated address here
WALLET_ADDRESS=

# X (Twitter) username to send payment to (without @)
# Use your own X account as receiver to test
RECEIVER=USE_YOUR_OWN_X_ACCOUNT

# Amount to send in USDC (default: 0.01)
AMOUNT=0.01
